{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "R: ASAN/USBAN",
      "command": "echo 'MingW does not support ASAN/UBSAN'",
      "linux": {
        "type": "process",
        "command": "/usr/bin/Rscript",
        "args": [
          "dev/check_asan.R"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "R",
          "fileLocation": [
            "relative",
            "${workspaceFolder}/src"
          ],
          "pattern": {
            "regexp": "^\\**(.*):(\\d+):(\\d+):\\s+runtime (warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        },
        {
          "owner": "R",
          "severity": "warning",
          "pattern": [
            {
              "kind": "file",
              "regexp": ".*(NOTE|WARNING)",
              "file": 1
            },
            {
              "regexp": "(.*)",
              "message": 1,
            }
          ]
        },
        {
          "owner": "R",
          "severity": "error",
          "pattern": [
            {
              "kind": "file",
              "regexp": ".*(ERROR)",
              "file": 1
            },
            {
              "regexp": "(.*)",
              "message": 1,
            }
          ]
        }
      ]
    },
    {
      "type": "process",
      "label": "R: lint package",
      "command": "C:/Program Files/R/R-4.2.1/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/bin/Rscript"
      },
      "args": [
        "-e",
        "styler:::style_pkg(filetype = c('R', 'Rmd'))"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: lint all code",
      "command": "${workspaceFolder}/dev/clang-format.exe",
      "linux": {
        "command": "/usr/bin/clang-format"
      },
      "args": [
        "-i",
        "--style=file",
        "*.cpp",
        "*.h"
      ],
      "dependsOn": "R: lint package",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: test units",
      "command": "C:/Program Files/R/R-4.2.1/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/bin/Rscript"
      },
      "args": [
        "-e",
        "testthat::test_local(reporter = testthat::SummaryReporter)"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: test coverage",
      "dependsOn": "R: test units",
      "command": "C:/Program Files/R/R-4.2.1/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/bin/Rscript"
      },
      "args": [
        "-e",
        "covr::package_coverage()"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: update codemeta",
      "command": "C:/Program Files/R/R-4.2.1/bin/x64/Rscript.exe",
      "linux": {
        "type": "process",
        "command": "/usr/bin/Rscript",
        "args": [
          "-e",
          "codemetar::write_codemeta(write_minimeta = TRUE); codemetar::give_opinions()"
        ],
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "clear": true,
        "group": "R",
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "shell",
      "label": "R: build current package",
      "command": "C:/Program Files/R/R-4.2.1/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/bin/Rscript"
      },
      "detail": "compiler: Rcmd",
      "args": [
        "-e",
        "'devtools::load_all()'"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "R: build current file",
      "command": "C:/rtools40/${input:compiler}/bin/g++.exe",
      "linux": {
        "command": "/usr/bin/g++"
      },
      "osx": {
        "command": "/usr/bin/clang++"
      },
      "detail": "compiler: g++/clang++",
      "args": [
        "-std=gnu++11",
        "-DNDEBUG",
        "-I\"C:/PROGRA~1/R/R-40~1.3/include\"",
        "-I\"${workspaceFolder}/renv/library/R-4.2/${input:renv_arch}/Rcpp/include\"",
        "-I\"${workspaceFolder}/renv/library/R-4.2/${input:renv_arch}/RcppParallel/include\"",
        "-I\"${workspaceFolder}/renv/library/R-4.2/${input:renv_arch}/RcppProgress/include\"",
        "-I\"${workspaceFolder}/renv/library/R-4.2/${input:renv_arch}/RcppThread/include\"",
        "-DRCPP_PARALLEL_USE_TBB=1",
        "-DSTRICT_R_HEADERS",
        "-O2",
        "-Wall",
        "-mfpmath=sse",
        "-msse2",
        "-mstackrealign",
        "-c",
        "${fileBasename}",
        "-o",
        "${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "renv_arch",
      "type": "command",
      "command": "cpptools.activeConfigCustomVariable",
      "args": "renv_arch"
    },
    {
      "id": "compiler",
      "type": "command",
      "command": "cpptools.activeConfigCustomVariable",
      "args": "compiler"
    }
  ]
}
